@model IEnumerable<DocReservation.Models.Appointment>

@{
    ViewData["Title"] = "Reservations Management";
}

<section class="py-8 px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Reservations Management</h1>

    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto bg-white rounded-lg shadow">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Doctor Name</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Patient Name</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Appointment Date</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Appointment Time</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var appointment in Model)
                    {
                        <tr class="hover:bg-blue-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@appointment.DoctorName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@appointment.PatientName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@appointment.AppointmentTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bg-yellow-50 text-yellow-800 p-4 rounded-lg shadow">
            No appointments found.
        </div>
    }
</section>
