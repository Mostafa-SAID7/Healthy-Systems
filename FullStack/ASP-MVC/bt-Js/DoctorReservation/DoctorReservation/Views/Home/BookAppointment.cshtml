@model IEnumerable<DoctorReservation.Models.Doctor>

<h1 class="text-center my-4">Book Appointment</h1>

<div class="row g-4">
    @foreach (var doctor in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card shadow-sm h-100 border-0 doctor-card">
                <img class="card-img-top" src="@Url.Content(doctor.Img)" alt="@doctor.Name" style="height: 220px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary fw-bold">@doctor.Name</h5>
                    <p class="card-text text-muted mb-3">Specialization: @doctor.Specialty</p>
                    <a href="@Url.Action("CompleteAppointment", "Appointments", new { doctorId = doctor.Id })"
                       class="btn btn-success w-100">
                        <i class="fas fa-calendar-check me-2"></i> Book Appointment
                    </a>
                </div>
            </div>
        </div>
    }
</div>
